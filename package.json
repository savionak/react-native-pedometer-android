{
  "name": "react-native-pedometer-android",
  "version": "0.1.0",
  "description": "React Native wrapper for Android SensorManager StepCounter",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "prepare": "bob build",
    "release": "dotenv -e .env.github release-it",
    "bootstrap": "npm i --prefix example && npm i && cd example && npm i && cd .."
  },
  "keywords": [
    "react-native",
    "android"
  ],
  "repository": "https://github.com/SVss/react-native-samsung-accessory",
  "author": "Vladislav Savionok <savionak@gmail.com> (https://github.com/SVss)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SVss/react-native-pedometer-android/issues"
  },
  "homepage": "https://github.com/SVss/react-native-pedometer-android/#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "commitlint": "^8.3.5",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.11.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "react": "16.11.0",
    "react-native": "0.62.3",
    "release-it": "^19.0.4",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "tag": false,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
